<%= form_with(model: device) do |form| %>
  <% if device.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
        <% device.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :serial, style: "display: block" %>
    <%= form.text_field :serial %>
  </div>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :brand, style: "display: block" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :processor, style: "display: block" %>
    <%= form.text_field :processor %>
  </div>

  <div>
    <%= form.label :memory, style: "display: block" %>
    <%= form.number_field :memory %>
  </div>

  <div>
    <%= form.label :storage, style: "display: block" %>
    <%= form.text_field :storage %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status,["Aviable","Assigned"]  %>
  </div>

  <div>
    <%= form.label :headquarter_id, style: "display: block" %>
    <%= form.select :headquarter_id, Headquarter.pluck(:name,:id) %>
  </div>

  <div>
    <%= form.label :colaborator_id, style: "display: block" %>
    <%= form.select :colaborator_id, colaborators_options %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
