<p style="color: green"><%= notice %></p>

<h1>Colaborators</h1>

<div id="colaborators", class: content-center>
  <table class="table-auto">
    <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>Profile</th>
        <th>Status</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @colaborators.each do |colaborator| %>
        <tr>
          <td><%=colaborator.name %></td>
          <td><%=colaborator.lastname %></td>
          <td><%=colaborator.profile %></td>
          <td><%=colaborator.status %></td>
          <td><%=colaborator.email %></td>
          <td><%=colaborator.phone %></td>
          <td><%=colaborator.adress %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New colaborator", new_colaborator_path,class:"bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
