<%= form_with(model: peripheral) do |form| %>
  <% if peripheral.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(peripheral.errors.count, "error") %> prohibited this peripheral from being saved:</h2>

      <ul>
        <% peripheral.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :serial, style: "display: block" %>
    <%= form.text_field :serial %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :brand, style: "display: block" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :type_id, style: "display: block" %>
    <%= form.select :type_id, Type.pluck(:name, :id) %>
  </div>

  <div>
    <%= form.label :colaborator_id, style: "display: block" %>
    <%= form.select :colaborator_id, colaborators_options %>
  </div>

  <div>
    <%= form.label :headquarter_id, style: "display: block" %>
    <%= form.select :headquarter_id, Headquarter.pluck(:name,:id) %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status,["Aviable","Assigned"]  %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
